<p style="color: green"><%= notice %></p>

<h1 class="mt-11 mb-5 text-lg">EXPENSES</h1>

<h2 class="mb-11 text-md">Total Expenses: $<%=@total%> </h2>

<% if @expenses.empty? %>
  <h3>There aren't any expenses here yet</h3>
<% else %>
  <div id="expenses" class="w-full">
    <% @expenses.each do |expense| %>
      <%= render expense %>
    <% end %>
  </div>
<% end %>

<%= link_to "New expense", new_expense_path(@param), class:"text-white text-center mt-10 bg-[#5fb523] w-full py-2 rounded-sm mb-5 hover:bg-[#3778c2]"%>
