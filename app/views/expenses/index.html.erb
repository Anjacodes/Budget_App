<p style="color: green"><%= notice %></p>

<h1>Expenses</h1>

<h2>Total Expenses: $<%=@total%> </h2>

<% if @expenses.empty? %>
  <h3>There aren't any expenses here yet</h3>
<% else %>
  <div id="expenses">
    <% @expenses.each do |expense| %>
      <%= render expense %>
      <p>
        <%= link_to "Show this expense", expense %>
      </p>
    <% end %>
  </div>
<% end %>

<%= link_to "New expense", new_expense_path(@param)%>
<%= link_to "Back to home", root_path %>
